        <addForeignKeyConstraint baseColumnNames="starts_id" baseTableName="runs" constraintName="runs_starts_id_fk" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="starts" validate="true"/>
    </changeSet>
    <changeSet author="michal" id="35">
        <addForeignKeyConstraint baseColumnNames="styles_id" baseTableName="runs" constraintName="runs_styles_id_fk" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="styles" validate="true"/>
    </changeSet>
</databaseChangeLog>
